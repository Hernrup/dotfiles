#!/bin/bash
MOUNT_USER=$1
if [ -z "$MOUNT_USER" ]; then
    echo "Usage: $0 <user-name>"
    exit 1
fi
echo -n "Password for share to mount: "
read -s MOUNT_PASS

mkdir -p /mnt/staff
mount -t cifs -o domain=MODELON,username=$MOUNT_USER,password=$MOUNT_PASS,iocharset=utf8,vers=3.0 //â€‹storage.modelon.com/staff /mnt/staff
